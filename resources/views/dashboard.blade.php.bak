    <script>
        // Fungsi untuk membuka modal
        function openModal(type) {
            if (type === 'upload') {
                document.getElementById('uploadModal').classList.add('show');
            } else if (type === 'manual') {
                document.getElementById('manualModal').classList.add('show');
                loadFormFields();
            }
        }

        // Fungsi untuk menutup modal
        function closeModal(type) {
            if (type === 'upload') {
                document.getElementById('uploadModal').classList.remove('show');
            } else if (type === 'manual') {
                document.getElementById('manualModal').classList.remove('show');
            } else if (type === 'financial') {
                document.getElementById('financialModal').classList.remove('show');
            }
        }

        // Fungsi untuk memuat field form
        function loadFormFields() {
            const container = document.getElementById('form-fields-container');
            container.innerHTML = '<p class="text-gray-500 dark:text-gray-400 col-span-2">Memuat formulir...</p>';

            fetch('/struk-fields')
                .then(response => response.json())
                .then(fields => {
                    container.innerHTML = '';

                    fields.forEach(field => {
                        const fieldHtml = createFormField(field);
                        container.innerHTML += fieldHtml;
                    });
                })
                .catch(error => {
                    console.error('Error loading form fields:', error);
                    container.innerHTML = '<p class="text-red-500 dark:text-red-400 col-span-2">Gagal memuat formulir. Silakan coba lagi.</p>';
                });
        }

        // Fungsi untuk membuat field form
        function createFormField(field) {
            const isFullWidth = ['alamat', 'catatan'].includes(field.name);
            const colSpan = isFullWidth ? 'col-span-2' : '';

            let inputField = '';

            switch (field.type) {
                case 'textarea':
                    inputField = `<textarea name="${field.name}" placeholder="${field.name}" class="border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-300 focus:border-indigo-500 dark:focus:border-indigo-400 focus:ring-indigo-500 dark:focus:ring-indigo-400 rounded-md shadow-sm w-full" rows="3"></textarea>`;
                    break;
                case 'date':
                    inputField = `<input type="date" name="${field.name}" placeholder="${field.name}" class="border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-300 focus:border-indigo-500 dark:focus:border-indigo-400 focus:ring-indigo-500 dark:focus:ring-indigo-400 rounded-md shadow-sm w-full">`;
                    break;
                default:
                    inputField = `<input type="text" name="${field.name}" placeholder="${field.name}" class="border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-300 focus:border-indigo-500 dark:focus:border-indigo-400 focus:ring-indigo-500 dark:focus:ring-indigo-400 rounded-md shadow-sm w-full">`;
            }

            return `
                <div class="${colSpan}">
                    <label class="block text-gray-700 dark:text-gray-300 text-sm font-medium mb-1">
                        ${field.name.charAt(0).toUpperCase() + field.name.slice(1)}
                    </label>
                    ${inputField}
                </div>
            `;
        }

        // Fungsi untuk menampilkan detail finansial
